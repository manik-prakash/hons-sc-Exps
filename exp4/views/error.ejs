<%- include('partials/header') %>

    <div class="card" style="max-width: 600px; margin: 4rem auto; text-align: center;">
        <h1 style="color: var(--error-color);">Oops!</h1>
        <h3 style="margin-bottom: 1rem;">
            <%= message || 'Something went wrong.' %>
        </h3>

        <% if (error && error.status) { %>
            <p style="color: var(--text-secondary); margin-bottom: 2rem;">Status Code: <%= error.status %>
            </p>
            <% } %>

                <a href="/" class="btn-primary" style="text-decoration: none; display: inline-block;">Return Home</a>

                <% if (process.env.NODE_ENV==='development' && error.stack) { %>
                    <div
                        style="margin-top: 2rem; text-align: left; background: #000; padding: 1rem; border-radius: 8px; overflow-x: auto;">
                        <pre style="color: #ef4444; font-size: 0.8rem;"><%= error.stack %></pre>
                    </div>
                    <% } %>
    </div>

    <%- include('partials/footer') %>