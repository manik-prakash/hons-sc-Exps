<%- include('partials/header') %>

    <div class="auth-container">
        <div class="card">
            <h2 style="text-align: center; margin-bottom: 2rem;">Register</h2>

            <% if (error) { %>
                <div class="alert">
                    <%= error %>
                </div>
                <% } %>

                    <form action="/register" method="POST">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" id="username" name="username" required placeholder="johndoe">
                            <small style="color: var(--text-secondary); font-size: 0.8rem;">Min 3 alphanumeric
                                characters</small>
                        </div>

                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" name="email" required placeholder="you@example.com">
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required placeholder="••••••••">
                            <small style="color: var(--text-secondary); font-size: 0.8rem;">Min 3 characters</small>
                        </div>

                        <div class="form-group">
                            <label for="role">Role (for demonstration)</label>
                            <select id="role" name="role">
                                <option value="guest">Guest</option>
                                <option value="customer">Customer</option>
                                <option value="editor">Editor</option>
                                <option value="admin">Admin</option>
                            </select>
                            <small style="color: var(--text-secondary); font-size: 0.8rem;">Select a role to test
                                privileges.</small>
                        </div>

                        <button type="submit" class="btn-primary">Create Account</button>
                    </form>

                    <div class="auth-links">
                        Already have an account? <a href="/login">Login here</a>
                    </div>
        </div>
    </div>

    <%- include('partials/footer') %>